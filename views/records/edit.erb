<div class="form-container">


<form  action="/records" method="post">
  <label for="artist-id">Artist:</label>
  <select name="artist_id" id="artist-id">
  <% @artists.each do |artist| %>
    <option value="<%= artist.id %>"><%= artist.name %></option>
  <% end %>
  </select>
  <label for="title">Title:</label>
  <input type="text" name="title" value="<%= @record.title %> " id="title" >

  <label for="genre">Genre:</label>
  <input type="text" name="genre" value="<%= @record.genre %> " id="genre">

  <label for="released">Released:</label>
  <input type="text" name="released" value="<%= @record.released %> " id="released">

  <label for="artwork">Artwork:</label>
  <input type="text" name="artwork" value="<%= @record.artwork %> " id="artwork">

  <label for="quantity">Quantity:</label>
  <input type="number" name="quantity" value="<%= @record.quantity.to_i %> " id="quantity">

  <label for="buy-price">Buy Price:</label>
  <input type="number" name="buy_price" value="<%= @record.buy_price.to_i%> " id="buy-price">

  <label for="sell-price">Sell Price:</label>
  <input type="number" name="sell_price" value="<%= @record.sell_price.to_i %> " id="sell-price">

  <input class="form-btn" type='submit' value="Edit Record">

</form>
</div>
